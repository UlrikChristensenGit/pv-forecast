    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "purpose": ["debug-in-terminal"],
            "justMyCode": false
        },
        {
            "name": "Debug ETL",
            "type": "python",
            "request": "attach",
            "port": 8075,
            "preLaunchTask": "func: host start --port 8075",
        },
        {
            "name": "Debug Dash",
            "type": "debugpy",
            "request": "launch",
            "module": "dash_app",
            "cwd": "${workspaceFolder}/web"
        }
    ]
}